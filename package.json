{
  "name": "sagesse-dafrique",
  "version": "1.0.0",
  "private": true,
  "main": "app.js",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "node app.js",
    "postinstall": "cd backend && npm run build && npx prisma generate && cd ../frontend && npm run build",
    "dev": "npm run dev --workspaces --if-present",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:production": "powershell -ExecutionPolicy Bypass -File ./scripts/build-production.ps1",
    "db:generate": "npm run db:generate --workspace=backend",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:seed": "npm run db:seed --workspace=backend",
    "db:studio": "npm run db:studio --workspace=backend"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
